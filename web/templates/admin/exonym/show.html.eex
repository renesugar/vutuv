
  <div class="profile-header">
    <div class="profile-header__info">
      <h1><%= gettext "Show exonym" %></h1>
    </div>
  </div>
</header>
<%= render Vutuv.LayoutView, "flash.html", assigns %>

<div class="breadcrumbs">
<%= Vutuv.UserHelpers.gen_breadcrumbs([
      {gettext("Admin Home"), admin_admin_path(@conn, :index)},
      {gettext("Exonyms"), admin_exonym_path(@conn, :index)},
      gettext("Show")]) %>
</div>

<div class="card-list">
  <section class="card">
    <div class="btns-right">
      <%= button to: admin_exonym_path(@conn, :delete, @exonym), method: :delete, class: "pull-right btn btn-xs btn-danger btn-icon" do %>
        <i>
          <%= render Vutuv.IconView, "close.html" %>
        </i>
      <% end %>
      <%= link to: admin_exonym_path(@conn, :edit, @exonym), class: "pull-right btn btn-xs btn-primary btn-icon" do %>
        <i>
          <%= render Vutuv.IconView, "pencil.html" %>
        </i>
      <% end %>
    </div>
    
      <h1>
        <strong><%= gettext "Value" %>:</strong>
      </h1>
      <p>
        <%= @exonym.value %>
      </p>
      <h1>
      <strong><%= gettext "Language Endonym" %>:</strong>
      </h1>
      <p>
        <%= @exonym.locale.endonym %>
      </p>
      <strong><%= gettext "Exonym Locale" %>:</strong>
      </h1>
      <p>
        <%= @exonym.exonym_locale.value %>
      </p>
    
  </section>
  <aside>
    <%= render Vutuv.SharedView, "_ad.html", assigns %>
  </aside>
</div>
