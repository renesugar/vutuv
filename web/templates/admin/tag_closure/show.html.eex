
  <div class="profile-header">
    <div class="profile-header__info">
      <h1><%= gettext "Show tag closure" %></h1>
    </div>
  </div>
</header>
<%= render Vutuv.LayoutView, "flash.html", assigns %>

<div class="breadcrumbs">
<%= Vutuv.UserHelpers.gen_breadcrumbs([
      {gettext("Admin"), admin_admin_path(@conn, :index)},
      {gettext("Tags"), admin_tag_path(@conn, :index)},
      {@tag.slug, admin_tag_path(@conn, :show, @tag)},
      {gettext("Tag closures"), admin_tag_closure_path(@conn, :index, @tag)},
      gettext("Show")]) %>
</div>

<div class="card-list">
  <section class="card">
    <div class="btns-right">
      <%= button to: admin_tag_closure_path(@conn, :delete, @tag, @tag_closure), method: :delete, class: "pull-right btn btn-xs btn-danger btn-icon" do %>
        <i>
          <%= render Vutuv.IconView, "close.html" %>
        </i>
      <% end %>
      <%= link to: admin_tag_closure_path(@conn, :edit, @tag, @tag_closure), class: "pull-right btn btn-xs btn-primary btn-icon" do %>
        <i>
          <%= render Vutuv.IconView, "pencil.html" %>
        </i>
      <% end %>
    </div>
    
      <h1>
        <strong><%= gettext "Parent" %>:</strong>
      </h1>
      <p>
        <%= @tag_closure.parent_id %>
      </p>
    
      <h1>
        <strong><%= gettext "Child" %>:</strong>
      </h1>
      <p>
        <%= @tag_closure.child_id %>
      </p>
    
      <h1>
        <strong><%= gettext "Depth" %>:</strong>
      </h1>
      <p>
        <%= @tag_closure.depth %>
      </p>
    
  </section>
  <aside>
    <%= render Vutuv.SharedView, "_ad.html", assigns %>
  </aside>
</div>
